<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:tint="@color/contact_name"
        android:src="@drawable/detail_logo"/>
    <ScrollView
        android:layout_below="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_name"
                android:inputType="text"
                android:maxLines="1"
                android:drawablePadding="13dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:textAppearance="@style/AppTheme.Text"
                android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp">

                <AutoCompleteTextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:drawablePadding="13dp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:textAppearance="@style/AppTheme.Text"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:paddingTop="7dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_sort_black_24dp"/>
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/type_spinner"
                android:layout_toRightOf="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/AppTheme.Text"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp">
            </android.support.v7.widget.AppCompatSpinner>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/type_spinner"
                android:layout_height="0.75dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:background="@color/black"></LinearLayout>
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp">
                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_phoneno"
                    android:drawablePadding="13dp"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:inputType="phone"
                    android:layout_marginLeft="5dp"
                android:textAppearance="@style/AppTheme.Text"
                    android:maxLines="1"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_password"
                    android:imeActionId="6"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@android:drawable/ic_secure"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                android:textAppearance="@style/AppTheme.Text"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/repassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_repassword"
                    android:imeActionId="6"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@android:drawable/ic_secure"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                android:textAppearance="@style/AppTheme.Text"
                    android:maxLines="1"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/sign_up_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/action_sign_up"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:theme="@style/AppTheme.button" />

        </LinearLayout>
    </ScrollView>



</RelativeLayout>
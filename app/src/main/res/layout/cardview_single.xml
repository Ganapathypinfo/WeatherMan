<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="@dimen/dp7"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_headerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_headerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:layout_toLeftOf="@+id/tv_dropArrow"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_postIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp5"
                        android:src="@drawable/contact_icon_profile"
                        android:tag="image_tag" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPostName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/beaurocrats"
                            android:textAppearance="@style/AppTheme.Text"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPostTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_watch_later_black_24dp"
                            android:drawablePadding="@dimen/dp2"
                            android:gravity="center"
                            android:text="Just now"
                            android:textAppearance="@style/AppTheme.Text"
                            android:textSize="@dimen/sp12"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_dropArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:drawableLeft="@android:drawable/arrow_down_float"
                    android:drawablePadding="@dimen/dp2"
                    android:drawableTint="@color/gray"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingRight="@dimen/dp15"
                    android:paddingTop="@dimen/dp5" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_bodyview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_below="@+id/rl_headerview"
                android:layout_margin="@dimen/dp15"
                android:orientation="vertical">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_postTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Post title"
                            android:textAppearance="@style/AppTheme.Text"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_postSubject"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dp15"
                            android:text="Post Subject" />

                    </LinearLayout>
                </ScrollView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_bodyview"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />
                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp15"
                    android:layout_gravity="center"
                    android:orientation="horizontal" >

                      <TextView
                          android:id="@+id/tv_postLike"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:drawableLeft="@drawable/ic_like_gray"
                          android:drawablePadding="@dimen/dp4"
                          android:layout_weight="1"
                          android:layout_gravity="center"
                          android:text="Like" />
                      <TextView
                          android:id="@+id/tv_postComment"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:drawableLeft="@drawable/ic_chat_gray_24dp"
                          android:drawablePadding="@dimen/dp4"
                          android:layout_weight="1"
                          android:layout_gravity="center"
                          android:text="Comment" />
                      <TextView
                          android:id="@+id/tv_postViews"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:drawableLeft="@drawable/ic_views_eye_gray_24dp"
                          android:drawablePadding="@dimen/dp4"
                          android:layout_weight="1"
                          android:text="Views" />
                  </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
